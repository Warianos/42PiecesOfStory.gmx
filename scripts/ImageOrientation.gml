// pointerOrientation

ang = obj_player.pointerAng;


if(ang > 0 and  ang < 45 or ang < 360 and  ang > 315) pointerDirection = "right"; 

if(ang >  45  and ang <  135) pointerDirection = "up";

if(ang >= 135 and ang <= 225) pointerDirection = "left";

if(ang > 225  and ang <  315) pointerDirection = "down";




